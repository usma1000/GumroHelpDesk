.col-md-6.col-md-offset-3
  = form_for(@location) do |f|
    - if @location.errors.any?
      #error_explanation
        %h2
          = pluralize(@location.errors.count, "error")
          prohibited this ticket from being saved:
        %ul
          - @location.errors.full_messages.each do |message|
            %li= message
    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'

      = f.label :carrier_id, "Carrier"
      = f.collection_select(:carrier_id, Carrier.all, :id, :name, { :prompt => 'Select a carrier', :selected => @location.carrier_id }, { class: 'form-control' })

    .actions
      = link_to 'Back', locations_path, class: 'btn btn-default'
      = f.submit class: 'btn btn-primary pull-right'

<div class="row">
  <div class="col-md-3">
    <h4>Priority Tickets</h4>
  </div>

  <%= render 'tickethead' %>

  <div class="col-md-2">
    <%= link_to new_ticket_path, class: 'btn btn-success' do %>
      <i class="glyphicon glyphicon-plus" aria-hidden="true"></i> New Ticket
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Priority</th>
      <th>Status</th>
      <th>Subject</th>
      <th>Message</th>
      <th>Created At</th>
      <th>Change Status</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets_priority.each do |ticket| %>
      <tr>
        <td>
          <%= link_to priority_status_ticket_path(ticket) do %>
            <% if ticket.priority %>
              <i class="glyphicon glyphicon-bookmark" style="color: red" aria-hidden="true"></i>
            <% else %>
              <i class="glyphicon glyphicon-bookmark" style="color: #e6e6e6" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if ticket.open? %>
            <i class="glyphicon glyphicon-inbox"></i>
          <% elsif ticket.waiting? %>
            <i class="glyphicon glyphicon-time"></i>
          <% elsif ticket.done? %>
            <i class="glyphicon glyphicon-ok"></i>
          <% elsif ticket.trashed? %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
        <td><%= link_to ticket.subject, ticket %></td>
        <td><%= truncate(ticket.content, length: 100, separator: ' ') %></td>
        <td>Created <%= time_ago_in_words(ticket.created_at) %> ago.</td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to done_status_ticket_path(ticket), class: 'btn btn-success' do %>
              <i class="glyphicon glyphicon-ok" aria-hidden="true"></i>
            <% end %>

            <% unless ticket.waiting? %>
              <%= link_to waiting_status_ticket_path(ticket), class: 'btn btn-default' do %>
                <i class="glyphicon glyphicon-time" aria-hidden="true"></i>
              <% end %>
            <% end %>

            <% unless ticket.open? %>
              <%= link_to open_status_ticket_path(ticket), class: 'btn btn-default' do %>
                <i class="glyphicon glyphicon-inbox" aria-hidden="true"></i>
              <% end %>
            <% end %>

            <%= link_to trashed_status_ticket_path(ticket), class: 'btn btn-danger' do %>
              <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

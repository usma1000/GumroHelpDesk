<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <p>
        <span class="lead"><%= @ticket.subject %></span>
        <span class="text-muted pull-right"> Created At: <%= @ticket.created_at %></span>
      </p>
    </div>
    <div class="panel-body">
      <p><%= @ticket.content %></p>
      <p><%= @ticket.priority %></p>
    </div>
  </div>
  <div class="btn-group">
    <%= link_to 'Edit', edit_ticket_path(@ticket), class: "btn btn-default" %>
    <%= link_to 'Back', tickets_path, class: "btn btn-default" %>
  </div>
</div>

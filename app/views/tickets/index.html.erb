<div class="col-md-10">
  <h4>All Tickets</h4>
</div>

<div class="col-md-2">
  <%= link_to new_ticket_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus" aria-hidden="true"></i> New Ticket
  <% end %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Message</th>
      <th colspan="3">Edit / Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.subject, ticket %></td>
        <td><%= truncate(ticket.content, length: 100, separator: ' ') %></td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to edit_ticket_path(ticket), class: 'btn btn-default' do %>
              <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
            <% end %>
            <%= link_to ticket, method: :delete, data: { confirm: 'Are you sure you want to delete this ticket?' }, class: 'btn btn-danger' do %>
              <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-md-10">
    <h4>All Tickets</h4>
  </div>

  <div class="col-md-2">
    <%= link_to new_ticket_path, class: 'btn btn-success' do %>
      <i class="glyphicon glyphicon-plus" aria-hidden="true"></i> New Ticket
    <% end %>
  </div>
</div>

<ul class="nav nav-pills" role="tablist">
  <li role="presentation"><a href="#"><i class="glyphicon glyphicon-bookmark"></i> Priority <span class="badge" <%= "style=background-color:red" if @tickets.priority.count > 0 %> ><%= @tickets.priority.count %></span></a></li>
  <li role="presentation"><a href="#"><i class="glyphicon glyphicon-inbox"></i> Open <span class="badge" <%= "style=background-color:red" if @tickets.status(0).count > 0 %> ><%= @tickets.status(0).count %></span></a></li>
  <li role="presentation"><a href="#"><i class="glyphicon glyphicon-time"></i> Waiting <span class="badge" <%= "style=background-color:red" if @tickets.status(1).count > 0 %> ><%= @tickets.status(1).count %></span></a></li>
  <li role="presentation"><a href="#"><i class="glyphicon glyphicon-ok"></i> Closed</a></li>
  <li role="presentation"><a href="#"><i class="glyphicon glyphicon-trash"></i> Trashed</a></li>
</ul>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Priority</th>
      <th>Subject</th>
      <th>Message</th>
      <th>Created At</th>
      <th>Edit / Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td>
          <% if ticket.priority %>
            <i class="glyphicon glyphicon-bookmark" style="color: red" aria-hidden="true"></i>
          <% else %>
            <i class="glyphicon glyphicon-bookmark" style="color: #e6e6e6" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to ticket.subject, ticket %></td>
        <td><%= truncate(ticket.content, length: 100, separator: ' ') %></td>
        <td>Created <%= time_ago_in_words(ticket.created_at) %> ago.</td>
        <td>
          <div class="btn-group" role="group" aria-label="...">
            <%= link_to edit_ticket_path(ticket), class: 'btn btn-default' do %>
              <i class="glyphicon glyphicon-edit" aria-hidden="true"></i>
            <% end %>
            <%= link_to ticket, method: :delete, data: { confirm: 'Are you sure you want to delete this ticket?' }, class: 'btn btn-danger' do %>
              <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

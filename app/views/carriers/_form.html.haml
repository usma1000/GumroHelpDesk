.row
  .col-md-6.col-md-offset-3
    = form_for(@carrier) do |f|
      - if @carrier.errors.any?
        #error_explanation
          %h2
            = pluralize(@carrier.errors.count, "error")
            prohibited this ticket from being saved:
          %ul
            - @carrier.errors.full_messages.each do |message|
              %li= message
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'

      .actions
        = link_to 'Back', carriers_path, class: 'btn btn-default'
        = f.submit class: 'btn btn-primary pull-right'
